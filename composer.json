{
    "name": "fadil/hfx",
    "description": "Basic Micro MVC",
    "authors": [
        {
            "name": "fadilxcoder",
            "email": "fadil@xcoder.dvlpr"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require": {
        "symfony/http-kernel": "^5.2",
        "symfony/http-foundation": "^5.2",
        "vlucas/phpdotenv": "^5.3",
        "twig/twig": "^3.0",
        "php-di/php-di": "^6.3",
        "symfony/asset": "^5.2",
        "nikic/fast-route": "^1.3",
        "mnapoli/silly": "^1.7",
        "algolia/algoliasearch-client-php": "^3.1",
        "josantonius/session": "^2.0",
        "elasticsearch/elasticsearch": "^7.14",
        "spatie/pdf-to-text": "^1.4",
        "mrclay/minify": "^3.0",
        "monolog/monolog": "^2.3"
    },
    "require-dev": {
        "tracy/tracy": "^2.7",
        "fakerphp/faker": "^1.20",
        "filp/whoops": "^2.13"
    },
    "scripts": {
        "auto-scripts": {
            "who:am:i": "php bin/console who:am:i"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    }
}
