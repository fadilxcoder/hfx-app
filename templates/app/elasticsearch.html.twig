{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block stylesheet %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="card mb-3">
            <div class="card-header"><i class="fa fa-table"></i> Elasticsearch ({{ total }})</div>
            <div class="card-body">
                <form class="form-inline text-center" action="" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" value="{{ search.name }}" placeholder="Name">
                        <label>&nbsp;&nbsp;&nbsp;&nbsp;</label>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="addr" value="{{ search.address }}" placeholder="Address">
                        <label>&nbsp;&nbsp;&nbsp;&nbsp;</label>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="email" value="{{ search.email }}" placeholder="Email">
                        <label>&nbsp;&nbsp;&nbsp;&nbsp;</label>
                    </div>
                    <button class="btn btn-primary btn-default" name="search">Search..</button>
                </form>
                <hr/>
                <?php if (null !== $results) { ?>
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        {% for _result in results %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ _result.name }}</td>
                                <td>{{ _result.address }}</td>
                                <td>{{ _result.email }}</td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="4" class="text-center"> No data !</td>
                            </tr>
                            {% endfor %}
                    </table>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
{% endblock %}